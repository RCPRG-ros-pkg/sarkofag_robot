<launch>

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find sark_description)/robots/sarkofag.urdf.xacro'" />
 
  <node pkg="robot_state_publisher" type="state_publisher" name="robot_state_publisher"/>
  
  <node pkg="diagnostic_aggregator" type="aggregator_node"
        name="diagnostic_aggregator" >
        
  <rosparam command="load" file="$(find sark_bringup)/config/sark_analyzers.yaml" />
  </node>

  <include file="$(find rtt_ros)/launch/deployer.launch">
    <arg name="NAME" value="SARK_OROCOS_ROBOT"/>
    <arg name="DEPLOYER_ARGS" value="-s $(find sark_bringup)/config/sark_hardware.ops"/>
    <arg name="LOG_LEVEL" value="Warning"/>
    <arg name="DEBUG" value="false"/>
  </include>

  <group ns="SARK_OROCOS_ROBOT">
    <param name="EC/master_config" command="cat $(find sark_bringup)/config/master_config.yaml"/>
    <rosparam>
      SarkDiag:
        hardware_label: Sarkofag
      SarkScheme:
        scheme_name: sarkofag_manager
      SarkHardwareInterface:
        test_mode: false
        timeouts_to_print: 3
        auto_synchronize: true
        rwh_nsec: 1200000
        active_motors: [sarkofag]
        hardware_hostname: chrobry
        sarkofag:
          label: sarkofag
          ports_adresses: /dev/ttyMI7
          synchro_needed: 0
          max_current: 20000
          max_increment: 2000.0
          card_indexes: 0
          enc_res: 4000.0
          synchro_step_coarse: -0.03
          synchro_step_fine: 0.007
          current_mode: 1
      SarkHwModel:
        iteration_per_step: 1
        step_per_second: 500
        torque_constant: [0.000105]
        inertia: [0.00015]
        viscous_friction: [0.02]
        current_input: [true]
      SarkofagSplineTrajectoryGeneratorJoint:
        number_of_joints: 1
      SarkofagSplineTrajectoryActionJoint:
        joint_names: [joint1]
        lower_limits: [-1000.0]
        upper_limits: [1000.0]
      SarkofagMotorParameters:
        lower_limits: [-100000.0]
        upper_limits: [100000.0]
      SarkofagSplineTrajectoryGeneratorMotor:
        number_of_joints: 1
      SarkofagSplineTrajectoryActionMotor:
        joint_names: [joint1]
      SarkofagLimitDetector:
        console_notification_active: true
        pos_inc_limit: [0.0]
        pos_limit_active: [false]
        pos_inc_limit_active: [false]
      SarkofagRegulator:
        debug: false
        eint_dif: 0.01
        A: 0.412429378531
        BB0: 1.5569592
        BB1: 1.5028614
        current_mode: true
        current_reg_kp: 200.0
        max_output_current: 20000.0
        max_desired_increment: 2000.0
        enc_res: 4000.0
      SarkofagPortDoubleSplit_hw_cp:
        number_of_ports: 1
      SarkofagPortDoubleAggregate_hw_p:
        number_of_ports: 1
      SarkofagPortDoubleSum:
        number_of_ports: 1
      SarkofagJntPub:
        joint_names: [SarkofagJoint]
    </rosparam>
  </group>

</launch>
